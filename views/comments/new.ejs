<% include ../partials/header %>
<div class="row top-space">
    <h1 style="text-align: center">Add New Review to
        <%= yoga.name %>
    </h1>
    <div class="list-group-item" style="width: 30%; margin: 25px auto;">
        <form action="/yoga/<%= yoga._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                <input class="form-control" type="number" name="rating" placeholder="rating">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="go-back" href="/yoga">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>