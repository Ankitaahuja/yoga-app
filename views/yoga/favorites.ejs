    <!--aa-->

    <header class="jumbotron">
        <div class="container">
            <h2>My Studios!</h2>
        </div>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% yoga.forEach(function(yoga){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= yoga.image %>">
                    <div class="caption">
                        <h4>
                            <%= yoga.name %>
                        </h4>
                    </div>
                    <p>
                        <a href="/yoga/<%= yoga._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>

</div>
</header>


