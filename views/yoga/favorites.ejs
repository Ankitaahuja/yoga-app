<div class="container top-space-fave">
    <div class="container">
        <h2>
            Welcome
            <%= currentUser.username %>
        </h2>
        <h3>
            Address:
            <%= currentUser.home %>
        </h3>
    </div>
    <script src="/scripts/index.js"></script>

    <!--aa-->
    <div id="map" class="halfmap"></div>
