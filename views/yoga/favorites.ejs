  <h2 id="all-studios" class="all-yoga-studios">My Created Studios</h2>
</div>
            <div class="row text-center" style="display:flex; flex-wrap: wrap;">

                <% allstudios.forEach(function(mystudio){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="search-results2 thumbnail">
                        <img class="image-results2" src="<%= mystudio.image %>">
                        <div class="caption">
                            <h4>
                                <%= mystudio.name %>
                                <script>
                                    userStudiosLocations.push({
                                        lat: <%= mystudio.lat %>,
                                        lng: <%= mystudio.lng %>
                                    });
                                </script>
                            </h4>
                        </div>
                        <p>
                            <a href="/yoga/<%= mystudio._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
                <% }); %>
            </div>

    </div>
    </header>




