<% include ../partials/header %>
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yoga</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= yoga.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= yoga.cost %>/Day Pass</h4>
                    <h4><%=yoga.rating%></h4>
                    <h4><%=yoga.amenities%></h4>
                    <h4><a><%=yoga.name%></a></h4>
                    <p><%= yoga.description %></p>
                    <p>
                    <em>Submitted by: <%= yoga.author.username %>, <%= moment(yoga.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && yoga.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/yoga/<%= yoga._id %>/edit">Edit Yoga Rating</a>
                        <form id="delete-form" action="/yoga/<%= yoga._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete Yoga Rating</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/yoga/<%= yoga._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% yoga.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                       <div>
                           <%= comment.text %>

                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <form style="display: inline" class="pull-right" action="/yoga/<%=yoga._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">DELETE</button>
                                    <a href="/yoga/<%=yoga._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-info">EDIT</a>
                                </form>
                            <% } %>
                       </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script>
  function initMap() {
    var lat = <%=yoga.lat %>;
    var lng = <%= yoga.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= yoga.name %><br />
      <%= yoga.location %></strong>
      <p><%= yoga.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDVNqmxoPpZXHe89d2y12ozPDVjoLAk4hw&callback=initMap"></script>

<% include ../partials/footer %>