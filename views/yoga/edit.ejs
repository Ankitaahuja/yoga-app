<% include ../partials/header %>
    <div class="row top-space">
        <h1 style="text-align: center">Edit <%= yoga.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/yoga/<%=yoga._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="yoga[name]" value="<%= yoga.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="yoga[image]" value="<%= yoga.image %>">
                </div>
                <div class="form-group">
                <input class="form-control" type="number" name="yoga[cost]" value="<%= yoga.cost %>" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="yoga[description]" value="<%= yoga.description %>">
                </div>
                <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= yoga.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/yoga/<%=yoga._id%>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

